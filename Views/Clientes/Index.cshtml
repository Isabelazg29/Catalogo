@model IEnumerable<Addventure.Models.Cliente>

@{
    ViewData["Title"] = "Lista de Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center my-4">Lista de Clientes</h1>

<div class="container">
    <div class="mb-4 text-end">
        <a asp-action="Create" class="btn btn-success">Crear Nuevo Cliente</a>
    </div>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-primary">
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th scope="col" class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.ClienteId" class="btn btn-warning btn-sm mx-1">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.ClienteId" class="btn btn-info btn-sm mx-1">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.ClienteId" class="btn btn-danger btn-sm mx-1">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
